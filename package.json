{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "markdot",
  "module": "index.ts",
  "type": "module",
  "version": "0.0.12",
  "scripts": {
    "markdot": "bun run ./scripts/markdot.ts",
    "test": "bun test",
    "build": "bun build ./scripts/markdot.ts --compile --minify --outfile markdot",
    "check": "biome check . && tsc",
    "check:fix": "biome check --apply-unsafe . && tsc",
    "ci": "biome ci . && tsc && bun test"
  },
  "dependencies": {
    "arg": "5.0.2",
    "chalk-template": "1.1.2",
    "mustache": "4.2.0",
    "remark-breaks": "4.0.0",
    "remark-frontmatter": "5.0.0",
    "remark-gfm": "4.0.1",
    "remark-parse": "11.0.0",
    "smol-toml": "1.4.2",
    "unified": "11.0.5",
    "unist-util-flat-filter": "2.0.0",
    "unist-util-visit": "5.0.0",
    "yaml": "2.8.1",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mdast": "4.0.4",
    "@types/mustache": "4.2.6",
    "bun-types": "1.2.22"
  }
}
